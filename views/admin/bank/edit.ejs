<%- include ../../partials/header.ejs %> <%- include ../../partials/navbar.ejs %> <%- include ../../partials/sidebar.ejs %>

<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Bank</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/bank">Bank</a></li>
            <li class="breadcrumb-item active">Ubah</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Form ubah bank "<%= bank.name %>"</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/bank/edit/<%= bank._id %>?_method=PUT" method="POST">
              <div class="card-body">
                <div class="form-group">
                  <label for="name">Nama Pemilik</label>
                  <input type="text" name="name" value="<%= bank.name %>" class="form-control" id="name" placeholder="Masukan nama pemilik" required />
                </div>
                <div class="form-group">
                  <label>Nama Bank</label>
                  <select class="form-control select2" style="width: 100%" name="bankName" required>
                    <option selected="selected">Pilih Bank</option>
                    <option value="BNI" 
                    <% if(bank.bankName === "BNI") { %>
                        selected
                    <% } %>
                    >
                        BNI
                    </option>
                    <option value="BCA" 
                    <% if(bank.bankName === "BCA") { %>
                        selected
                    <% } %>
                    >
                        BCA
                    </option>
                    <option value="BRI" 
                    <% if(bank.bankName === "BRI") { %>
                        selected
                    <% } %>
                    >
                        BRI
                    </option>
                    <option value="Mandiri" 
                    <% if(bank.bankName === "Mandiri") { %>
                        selected
                    <% } %>
                    >
                        Mandiri
                    </option>
                    <option value="Citibank" 
                    <% if(bank.bankName === "Citibank") { %>
                        selected
                    <% } %>
                    >
                        Citibank
                    </option>
                    <option value="CIMB Niaga" 
                    <% if(bank.bankName === "CIMB Niaga") { %>
                        selected
                    <% } %>
                    >
                        CIMB Niaga
                    </option>
                    <option value="BTPN" 
                    <% if(bank.bankName === "BTPN") { %>
                        selected
                    <% } %>
                    >
                        BTPN
                    </option>
                    <option value="Panin Bank" 
                    <% if(bank.bankName === "Panin Bank") { %>
                        selected
                    <% } %>
                    >
                        Panin Bank
                    </option>
                    <option value="DBS" 
                    <% if(bank.bankName === "DBS") { %>
                        selected
                    <% } %>
                    >
                        DBS
                    </option>
                    <option value="BSI" 
                    <% if(bank.bankName === "BSI") { %>
                        selected
                    <% } %>
                    >
                        BSI
                    </option>
                    <option value="Credit Card" 
                    <% if(bank.bankName === "Credit Card") { %>
                        selected
                    <% } %>
                    >
                        Credit Card
                    </option>
                  </select>
                </div>
                <!-- <div class="form-group">
                  <label for="nameBank">Nama bank</label>
                  <input type="text" name="nameBank" value="<%= bank.nameBank %>" class="form-control" id="nameBank" placeholder="Masukan nama bank" required />
                </div> -->
                <div class="form-group">
                  <label for="noRekening">Nomor Rekening</label>
                  <input type="number" name="noRekening" value="<%= bank.noRekening %>" class="form-control" id="noRekening" placeholder="Masukan nomor rekening" required />
                </div>
              </div>

              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </form>
          </div>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>

<%- include ../../partials/footer.ejs %> <%- include ../../partials/js.ejs %>
